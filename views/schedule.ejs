  <script>
    main_section = document.getElementById('data');
    if(Auctions._materializedDocs.length==0){
      const para = document.createElement("p");
      const node = document.createTextNode("You have no scheduled Auctions. Schedule an auction now !!");
      para.appendChild(node);
      main_section.appendChild(para);
    }else{
      para = document.createElement("p");
      node = document.createTextNode(`You have ${Auctions._materializedDocs.length} scheduled Auctions.`);
      para.appendChild(node);
      main_section.appendChild(para);
      for (var i = 0; i < Auctions._materializedDocs.length; i++) {
        console.log(Auctions._materializedDocs[i]);
        para = document.createElement("div");
        para.innerHTML = `
        <div class="card">
          <div class="card-header">
            ${Auctions._materializedDocs[i]._fieldsProto.data.mapValue.fields.title.stringValue} organized by ${Auctions._materializedDocs[i]._fieldsProto.data.mapValue.fields.name.stringValue}
          </div>
          <div class="card-body">
            <h5 class="card-title">${Auctions._materializedDocs[i]._fieldsProto.data.mapValue.fields.heading.stringValue}</h5>
            <p class="card-text">${Auctions._materializedDocs[i]._fieldsProto.data.mapValue.fields.description.stringValue}</p>
            <a href="/editauctiondetails/${Auctions._materializedDocs[i]._ref._path.segments[3]}" class="btn btn-primary">Edit Auction</a>
            <a href="/auctionItems/${Auctions._materializedDocs[i]._ref._path.segments[3]}" class="btn btn-primary">Add or Remove Items for Auction</a>
          </div>
        </div>`;
        main_section.appendChild(para);
      }
    }
    console.log(Auctions);
  </script>

  <script>
    function addMinutes(date, minutes) {
      return new Date(date.getTime() + minutes*60000);
    }
    const currentDate = new Date();
