        <div class="heading_container heading_center">
          <h2>
            Ongoing Auctions
          </h2>
        </div>
        <div class="row">
          <% for(var i=0; i < ongoingAuctions.length; i++) { %>
            <div class="col-sm-6 col-lg-4">
              <div class="box">
