<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>


  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <!-- fonts style -->
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
  <!-- range slider -->

  <!-- font awesome style -->
  <link href="/css/font-awesome.min.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="/css/responsive.css" rel="stylesheet" />

</head>

<body style="background:#fbf7ed">

  <div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
      <div class="header_bottom">
        <div class="container-fluid">
          <nav class="navbar navbar-expand-lg custom_nav-container ">
            <a class="navbar-brand" href="index.html">
              <span>
                E - AUCTION
              </span>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class=""> </span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ">
                <li class="nav-item active">
                  <a class="nav-link" href="/view">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/profile">Profile</a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <!-- end header section -->
    <!-- slider section -->

    <!-- end slider section -->
  </div>

  <section class="detail-container">
    <div class="detail-container-head">
      <div class="heading_container">
        <h2 class='auction-heading' style="color:white">
          <%= auction.Heading %>
        </h2>
      </div>

      <div class="auction-title">
        <%= auction.title %>
      </div>

      <div class="auction-description">
        <%= auction.description %>
      </div>

      <hr style="background:white;border:0.5px solid white">

      <div class="row">
        <div class="col-3">
          <div class="running-total">
            <h5>Running Total</h5>
            <span style="color:#ecbb19;font-size: 25px;">$300</span><br><br>
            <span style="font-size: 18px;">No. of items: </span><span>
              <%= auctionItem.length %>
            </span>
          </div>
        </div>
        <div class="col-9">
          <div class="author">
            <h5>Items in this auction are being sold by <%= auction.Author.displayName %>
            </h5><br>
            <span style="font-size: 18px;font-weight:bold;">Contact Name: </span><span
              style="margin-left:10px;font-size: 18px;">
              <%= auction.Author.displayName %>
            </span><br>
            <span style="font-size: 18px;font-weight:bold;">Email: </span><span
              style="margin-left:10px;font-size: 18px;">
              <%= auction.Author.email %>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div style="clear:both"></div>
    <div class="hero_area">
      <div class="detail-container-sec">
        <section class="product_section layout_padding">
          <div class="display-items">
            <div class="heading_container">
              <h2 class='items-heading'>
                Items
              </h2>
            </div>


            <div class="row">
              <% for(var i=0; i < auctionItem.length; i++) { %>
                <div class="col-sm-4 col-lg-3">
                  <div class="box" style="border:0.1px solid rgb(219, 219, 219);padding:0;border-radius:6px">
                    <div class="img-box">
                      <img src="/images/p1.png" alt="">
                      <a href="/detail/<%=docID%>/item/<%=auctionItem[i].id%>" class="add_cart_btn">
                        <span>
                          View Details
                        </span>
                      </a>
                    </div>
                    <div class="detail-box" style="padding:10px">
                      <h5>
                        <%= auctionItem[i].name %>
                      </h5>
                      <div class="product_description">
                        <%= auctionItem[i].description.substring(0, 60) %>
                      </div>
                      <div class="product_info">

                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
            </div>
          </div>
      </div>
    </div>
  </section>
  </div>

  <div>

  </div>

  </section>



  <!-- info section -->
  <section class="info_section ">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="info_contact">
            <h5>
              <a href="" class="navbar-brand">
                <span>
                  E - AUCTION
                </span>
              </a>
            </h5>
            <p>
              <i class="fa fa-map-marker" aria-hidden="true"></i>
              Address
            </p>
            <p>
              <i class="fa fa-phone" aria-hidden="true"></i>
              +01 1234567890
            </p>
            <p>
              <i class="fa fa-envelope" aria-hidden="true"></i>
              demo@gmail.com
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="info_info">
            <h5>
              Information
            </h5>
            <p>
              Eligendi sunt, provident, debitis nemo, facilis cupiditate velit libero dolorum aperiam enim nulla iste
              maxime corrupti ad illo libero minus.
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="info_links">
            <h5>
              Useful Link
            </h5>
            <ul>
              <li>
                <a href="index.html">
                  Home
                </a>
              </li>
              <li>
                <a href="about.html">
                  About
                </a>
              </li>
              <li>
                <a href="product.html">
                  Products
                </a>
              </li>
              <li>
                <a href="why.html">
                  Why Us
                </a>
              </li>
              <li>
                <a href="testimonial.html">
                  Testimonial
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-3">
          <div class="info_form ">
            <h5>
              Newsletter
            </h5>
            <form action="">
              <input type="email" placeholder="Enter your email">
              <button>
                Subscribe
              </button>
            </form>
            <div class="social_box">
              <a href="">
                <i class="fa fa-facebook" aria-hidden="true"></i>
              </a>
              <a href="">
                <i class="fa fa-twitter" aria-hidden="true"></i>
              </a>
              <a href="">
                <i class="fa fa-instagram" aria-hidden="true"></i>
              </a>
              <a href="">
                <i class="fa fa-youtube" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- end info_section -->


  <!-- footer section -->
  <footer class="footer_section">
    <div class="container">
      <p>
        &copy; <span id="displayYear"></span> All Rights Reserved By
        <a href="https://html.design/">Free Html Templates</a>
      </p>
    </div>
  </footer>
  <!-- footer section -->
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>


  <!-- jQery -->
  <script src="/js/jquery-3.4.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="/js/bootstrap.js"></script>
  <!-- custom js -->
  <script src="/js/custom.js"></script>

</body>

</html>